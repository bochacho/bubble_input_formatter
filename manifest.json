{
  "manifest_version": 3,
  "name": "Bubble Input Formatter",
  "version": "1.0.0",
  "description": "Formats JSON by replacing values with template text",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": [
    "clipboardWrite"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}